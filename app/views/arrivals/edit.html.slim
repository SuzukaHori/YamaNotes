= turbo_frame_tag @arrival
  = render 'shared/errors', model: @arrival
  = form_with model: @arrival, url: walk_arrival_path(walk_id: @arrival.walk.id, id: @arrival.id), method: :put do |f|
    = f.label :arrived_at, class: 'inline-block mt-4 mb-1'
    .flex.items-center
      = f.time_select :arrived_at, {}, { class: 'rounded border border-gray-300' }
      p.ml-2.text-xl
        | #{@arrival.station.name}駅
    = f.label :memo, class: 'inline-block mt-4 mb-1'
    = f.text_area :memo, class: 'inline w-full rounded border border-gray-300', placeholder: '辛くなってきた！自転車が羨ましい><', maxlength: 250, autofocus: true
    .text-center.my-2
      = f.submit '保存', class: 'btn-primary'
